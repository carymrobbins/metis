<% provide(:title, @user.name) %>
<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>
<div class="row">
  <div class="span2 offset1">
    <a href="#" class="btn btn-large btn-success">New List</a>
  </div>
</div>
<% if @user.lists.each do |list| %>
  <div class="row">
    <a href="#"><%= list.name %></a>
  </div>
<% end.empty? %>
  <div class="row">
    <div class="offset1">
      <h4>You haven't created any lists!</h4>
    </div>
  </div>
<% end %>
