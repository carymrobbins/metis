<% provide(:title, "Bank - #{@customer_institution.name}") %>
<div class="top-buttons row">
  <div class="offset3 span3">
    <%= link_to 'Back to banks', customer_institutions_path,
                class: 'btn btn-primary' %>
  </div>
  <div class="span3">
    <%= render 'layouts/sync_button' %>
  </div>
</div>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@customer_institution) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <div class="center">
        <%= f.submit 'Save bank', class:'btn btn-large btn-success' %>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="span4"></div>
  <div class="span4">
    <h1>Accounts</h1>
  </div>
</div>
<div class="row">
  <div class="span8 offset2">
    <table class="accounts table">
      <tbody>
      <% @accounts.each do |a| %>
        <tr>
          <td><%= link_to a.account_nickname, a %></td>
          <td><%= a.account_number %></td>
          <td><%= number_to_currency a.balance_amount %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

