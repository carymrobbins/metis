<% provide(:title, 'My Lists') %>
<h1>My Lists</h1>
<div class="row">
  <div class="span2 offset1">
    <%= link_to 'New List', '#', class: 'btn btn-large btn-success' %>
  </div>
</div>
<% if @lists.each do |list| %>
  <div class="row">
    <a href="#"><%= list.name %></a>
  </div>
<% end.empty? %>
  <div class="row">
    <div class="offset1">
      <h4>You haven't created any lists!</h4>
    </div>
  </div>
<% end %>
